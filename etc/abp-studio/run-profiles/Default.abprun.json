{
  "applications": {
    "BookStore.Web": {
      "type": "dotnet-project",
      "launchUrl": "https://localhost:44316",
      "path": "../../../src/BookStore.Web/BookStore.Web.csproj",
      "kubernetesService": ".*-web$",
      "healthCheckEndpoint": "/health-status",
      "healthUiEndpoint": "/health-ui",
      "execution": {
        "order": 2
      }
    }
  },
  "containers": {
    "serviceName": "BookStore-Containers",
  },
  "tasks":{
    "Initialize Solution":{
    "type": "cli",
    "runOnSolutionOpen": true,
    "startCommand": "etc/scripts/initialize-solution.ps1",
    "workingDirectory": "../../../"
    },
    "Migrate Database":{
    "type": "cli",
    "runOnSolutionOpen": false,
    "startCommand": "etc/scripts/migrate-database.ps1",
    "workingDirectory": "../../../"
    }
  }
}